<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="2dp"
    app:cardElevation="8dp"
    android:layout_margin="10dp">


    <LinearLayout
        android:layout_width="387dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/mimage"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="50dp"
                android:src="@drawable/nnfive" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/mtext"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/quintessential"

                    android:paddingLeft="20dp"
                    android:text="N-95 Mask (Buy 2 get 1 free)"
                    android:textColor="#000"
                    android:textSize="22sp" />

                <RatingBar
                    android:id="@+id/rbar1"
                    style="@style/Widget.AppCompat.RatingBar.Small"
                    android:layout_width="102dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:paddingLeft="20dp"
                    android:rating="4.5" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:src="@drawable/ltd" />


                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="72dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/mprice"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:layout_marginTop="15dp"
                        android:fontFamily="sans-serif"
                        android:paddingLeft="20dp"
                        android:text="₹300 "
                        android:textColor="#000"
                        android:textSize="30sp" />

                    <TextView
                        android:id="@+id/moffer"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginTop="15dp"
                        android:fontFamily="@font/quintessential"
                        android:paddingLeft="10dp"
                        android:text="₹5̶0̶0̶"
                        android:textColor="#8C8A8A"
                        android:textSize="23sp" />

                </androidx.appcompat.widget.LinearLayoutCompat>

                <TextView
                    android:id="@+id/moldprice"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="-20dp"
                    android:paddingLeft="20dp"
                    android:text="Save ₹50 by using coupons"
                    android:textColor="#000"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/bbtn"
                    android:layout_width="130dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/blue_button"
                    android:shadowColor="#E2B3B3B3"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="5"
                    android:text="View"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp" />


            </LinearLayout>

        </androidx.appcompat.widget.LinearLayoutCompat>


    </LinearLayout>

</androidx.cardview.widget.CardView>